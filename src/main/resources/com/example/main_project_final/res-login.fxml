   <HBox layoutY="-1.0" prefHeight="600.0" prefWidth="800.0">
      <AnchorPane prefHeight="600.0" prefWidth="393.0" style="-fx-background-color: #1F1D36;">
         <ImageView fx:id="loginImage" fitHeight="244.0" fitWidth="368.0" layoutX="6.0" layoutY="154.0" pickOnBounds="true" preserveRatio="true">
