            <font>
               <Font size="15.0" />
            </font></Button>
         <Label layoutX="49.0" layoutY="437.0" text="Don't have an account">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <Label layoutX="211.0" layoutY="437.0" text="SignUp" textFill="#1010d7">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
      </AnchorPane>
   </HBox>
