         <Label id="button-login-res" layoutX="114.0" layoutY="320.0" stylesheets="@style.css" text="ID: ">
            <font>
               <Font size="18.0" />
            </font></Label>
         <Label layoutX="49.0" layoutY="165.0" prefHeight="37.0" prefWidth="307.0" style="-fx-font-family: verdana;" text="Sign In">
            <font>
               <Font size="30.0" />
            </font>
         </Label>
         <Button id="button" fx:id="loginButton" layoutX="282.0" layoutY="371.0" mnemonicParsing="false" onAction="#loginAction" style="-fx-background-color: #864879; -fx-padding: 8px 16px; -fx-border-radius: 8px; -fx-background-radius: 8px;" text="Login" textFill="WHITE">
